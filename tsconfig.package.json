{
	"exclude": [".yarn"],
	"compilerOptions": {
		"composite": true,
		"incremental": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"target": "ES2020",
		"lib": ["ES2020"],
		"strictNullChecks": true,
		"experimentalDecorators": true
	}
}
